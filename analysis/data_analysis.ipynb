# SQL Injection Prevention Analysis
# Simple Python script - no Jupyter notebook issues

import pandas as pd
import matplotlib.pyplot as plt
import json
import os

def main():
    print("=" * 60)
    print("ğŸ” SQL Injection Prevention Analysis")
    print("=" * 60)
    
    # 1. Load data
    print("\nğŸ“¥ Loading experimental data...")
    try:
        df = pd.read_csv('../data/experimental_results.csv')
        print(f"âœ… Successfully loaded {len(df)} techniques")
    except Exception as e:
        print(f"âŒ Error loading data: {e}")
        return
    
    # 2. Calculate security scores
    print("\nğŸ§® Calculating security scores...")
    security_metrics = ['AuthBypass', 'DataExtraction', 'DBManipulation', 'SystemCompromise']
    df['SecurityScore'] = df[security_metrics].mean(axis=1)
    
    # 3. Display results
    print("\nğŸ“Š SECURITY RANKING:")
    print("-" * 50)
    
    df_sorted = df.sort_values('SecurityScore', ascending=False)
    medals = ["ğŸ¥‡", "ğŸ¥ˆ", "ğŸ¥‰", "4.", "5.", "6."]
    
    for i, (_, row) in enumerate(df_sorted.iterrows()):
        print(f"{medals[i]} {row['Technique']:30} {row['SecurityScore']:6.1f}%")
    
    # 4. Create visualization
    print("\nğŸ¨ Creating visualization...")
    plt.figure(figsize=(10, 6))
    
    colors = ['#2E86AB', '#A23B72', '#F18F01', '#C73E1D', '#6A994E', '#495057']
    bars = plt.bar(df_sorted['Technique'], df_sorted['SecurityScore'], color=colors)
    
    plt.title('SQL Injection Prevention: Security Effectiveness', 
              fontsize=14, fontweight='bold', pad=20)
    plt.ylabel('Security Score (%)', fontsize=11)
    plt.xticks(rotation=45, ha='right')
    plt.ylim(0, 105)
    plt.grid(axis='y', alpha=0.3, linestyle='--')
    
    # Add value labels
    for bar in bars:
        height = bar.get_height()
        plt.text(bar.get_x() + bar.get_width()/2., height + 1,
                f'{height:.1f}%', ha='center', va='bottom', 
                fontsize=9, fontweight='bold')
    
    # 5. Save output
    os.makedirs('../docs', exist_ok=True)
    plt.tight_layout()
    plt.savefig('../docs/security_analysis.png', dpi=300, bbox_inches='tight')
    print("âœ… Chart saved: docs/security_analysis.png")
    
    # 6. Save JSON results
    print("\nğŸ’¾ Saving analysis results...")
    results = {
        'analysis_summary': {
            'total_techniques': len(df),
            'analysis_date': pd.Timestamp.now().strftime('%Y-%m-%d'),
            'version': '1.0'
        },
        'security_ranking': df_sorted[['Technique', 'SecurityScore']].to_dict('records'),
        'key_findings': {
            'best_technique': df_sorted.iloc[0]['Technique'],
            'best_security_score': float(df_sorted.iloc[0]['SecurityScore']),
            'recommendation': 'Use Parameterized Queries for new projects'
        }
    }
    
    with open('../data/analysis_results.json', 'w') as f:
        json.dump(results, f, indent=2)
    
    print("âœ… Results saved: data/analysis_results.json")
    
    # 7. Display final summary
    print("\n" + "=" * 60)
    print("âœ… ANALYSIS COMPLETE!")
    print("=" * 60)
    print("\nğŸ“‹ Summary:")
    print(f"â€¢ Best technique: {df_sorted.iloc[0]['Technique']}")
    print(f"â€¢ Security score: {df_sorted.iloc[0]['SecurityScore']:.1f}%")
    print(f"â€¢ Performance overhead: {df_sorted.iloc[0]['AvgResponseTime']:.1f}ms")
    print("\nğŸ“ Outputs generated:")
    print("   - docs/security_analysis.png (chart)")
    print("   - data/analysis_results.json (detailed results)")
    print("\nğŸ”— GitHub Repository:")
    print("   https://github.com/jiaxuan9513/SQL-Injection-Prevention-Analysis")

if __name__ == "__main__":
    main()
